<!-- ####### SPLIT BLOG ####### -->
{% set data = data[0] %}
{% set title_align = 'left' %}
<table class="split_blog" width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td class="image" valign="top" width="50%">
            {% include 'blog_image.twig' %}
        </td>
        <td class="content" valign="top">
            {% include 'blog_title.twig' %}
            {% include 'blog_blurb.twig' %}
            {% include 'blog_readmore.twig' %}
        </td>
    </tr>
</table>
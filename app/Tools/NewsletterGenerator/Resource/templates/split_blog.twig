<!-- ####### SPLIT BLOG ####### -->
{% set data = data[0] %}
{% set title_align = 'left' %}
<table class="split_blog" width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0" style="color: inherit; font-family: inherit; font-size: inherit; cursor: inherit;">
    <tr>
        <td class="image" valign="top" width="50%" style="color: inherit; font-family: inherit; font-size: inherit; cursor: inherit; padding: 20px 5px 20px 20px;">
            {% include 'blog_image.twig' %}
        </td>
        <td class="content" valign="top" style="color: inherit; font-family: inherit; font-size: inherit; cursor: inherit; padding: 20px">
            {% include 'blog_title.twig' %}
            {% include 'blog_blurb.twig' %}
            {% include 'blog_readmore.twig' %}
        </td>
    </tr>
</table>
<div class="block_shadow" style="height: 4px; background-color: #CCC7B0; margin-left: 4px;"></div>
<!-- ####### QUOTE ####### -->
{% set data = data[0] %}
<table class="quote" align="center" width="100%" bgcolor="#c46f17" border="0" cellpadding="0" cellspacing="0" style="width: 100%; height: auto; border-spacing: 5px; border-bottom: solid; border-bottom-color: #cccac0; border-bottom-width: 4px; border-right: solid; border-right-color: #cccac0; border-right-width: 4px; cursor: default;">
    <tr>
        <td class="quote-open-image" align="right" valign="top" width="5%" style="padding-top: 23px; color: white; font-family: Arial, Helvetica, sans-serif, Latha, Inaimathi; cursor: default; font-size: 45px; font-weight: bold; font-style: italic">
            <img src="http://www.ishafoundation.org/mailmarketer/admin/temp/user/3/quote-white.png" alt="&ldquo;" style="display: block;" border="0" height="38" width="40">
        </td>
        <td class="quote-text" width="85%" style="padding: 26px 55px 0px 25px; font-size: 15px; color: #7c7c7c; font-family: Arial, Helvetica, sans-serif, Latha, Inaimathi; cursor: default; line-height: 2.3em; word-break: keep-all; letter-spacing: 0em; word-spacing: 0.16em" valign="bottom">
            <a style="color: white; text-decoration: none;" href="{{data['url']}}{% if ('?' in data['url']) == true %}&amp;{% else %}?{% endif %}{% include 'utm_param.twig' %}" target="_blank" title="{{data['title']}}">
                <span class="text" style="padding-right: 40px">{{data['blurb']}}</span>
            </a>
        </td>
    </tr>
    <tr>
        <td>&nbsp;</td>
        <td class="author_signature" style="display: block; font-size: 19px; color: white; font-weight: bold; text-align: right; padding: 0px 45px 15px; font-family: Arial, Helvetica, sans-serif, Latha, Inaimathi; cursor: default; line-height: 1.9em; word-break: keep-all; letter-spacing: 0em; word-spacing: 0.16em">
            &ndash; <a style="color: white; text-decoration: none;" href="{{data['url']}}{% if ('?' in data['url']) == true %}&amp;{% else %}?{% endif %}{% include 'utm_param.twig' %}" title="{{data['title']}}" target="_blank">{{config['quote']['signature']}}</a>
        </td>
    </tr>
</table>
{% if data['media']['duration'] %}
<!-- <<<<<<< TOP VIDEO PANEL >>>>>>> -->
<div class="video_title" style="background-color: #1E1E1E; padding: 8px 6px 4px 8px; font-size: 9px;">
    <a href="{{data['url']}}{% if ('?' in data['url']) == true  %}&amp;{% else %}?{% endif %}{% include 'utm_param.twig' %}" style="text-decoration: none; color: #DDD;" target="_blank">
        {{data['title']}}
    </a>
</div>
<!-- >>>>>>> TOP VIDEO PANEL <<<<<<< -->
{% endif %}
<!-- <<<<<<< IMAGE >>>>>>> -->
<div class="image">
    <a href="{{data['url']}}{% if ('?' in data['url']) == true  %}&amp;{% else %}?{% endif %}{% include 'utm_param.twig' %}" style="text-decoration: none; color: inherit;" target="_blank" title="{{data['title']}}">
        <img src="{{data['media']['image']['url']}}" alt="{{data['title']}}" title="{{data['title']}}" border="0" style="display: block;" width="100%" height="{{data['media']['image']['height']}}" />
    </a>
</div>
<!-- >>>>>>> IMAGE <<<<<<< -->
{% if data['media']['duration'] %}
<!-- <<<<<<< BOTTOM VIDEO PANEL >>>>>>> -->
<table width="100%" bgcolor="#1E1E1E" border="0" cellpadding="0" cellspacing="0" style="padding: 0 5px 0 5px; height: 26px; vertical-align: middle; color: inherit; font-family: inherit; font-size: inherit; cursor: inherit;">
    <tr>
        <td width="5%" valign="middle" style="color: inherit; font-family: inherit; font-size: inherit; cursor: inherit;">
            <a href="{{data['url']}}{% if ('?' in data['url']) == true  %}&amp;{% else %}?{% endif %}{% include 'utm_param.twig' %}" style="text-decoration: none;" target="_blank" title="{{data['title']}}">
                <span style="display: inline-block;float: left; width: 0px; height: 0px; max-height: 0px;  margin-left: 12px; margin-right: 16px; border-top: 6px solid transparent; border-bottom: 6px solid transparent; border-left: 10px solid #7F7F7F; z-index: 2; transition: all .3s;">&nbsp;</span>
            </a>
        </td>
        <td width="4%" valign="middle" style="color: inherit; font-family: inherit; font-size: inherit; cursor: inherit;">
            <a href="{{data['url']}}{% if ('?' in data['url']) == true  %}&amp;{% else %}?{% endif %}{% include 'utm_param.twig' %}" style="text-decoration: none; color: inherit;" target="_blank" title="{{data['title']}}">
                <img src="{{config['blog_image']['volume_icon']}}" alt="Volume" width="15" height="14" alt="YouTube" style="padding-top: 1px;" />
            </a>
        </td>
        <td width="25%" align="right" style="font-size: 10px; color: inherit; font-family: inherit; cursor: inherit;">
            {% set duration = data['media']['duration']|split(':') %}
            <span style="color: #DDD;">00:00{% if duration[0] != "00" %}:00{% endif %}</span>&nbsp;/&nbsp;{% if duration[0] != "00" %}{{duration[0]}}:{% endif %}{{duration[1]}}:{{duration[2]}}
        </td>
        <td align="right" style="color: inherit; font-family: inherit; font-size: inherit; cursor: inherit;">
            <a href="{{data['url']}}{% if ('?' in data['url']) == true  %}&amp;{% else %}?{% endif %}{% include 'utm_param.twig' %}" style="text-decoration: none; color: inherit;" target="_blank" title="{{data['title']}}">
                <img src="{{config['blog_image']['youtube_icon']}}" alt="YouTube" />
            </a>
        </td>
    </tr>
</table>
<!-- >>>>>>> BOTTOM VIDEO PANEL <<<<<<< -->
{% endif %}
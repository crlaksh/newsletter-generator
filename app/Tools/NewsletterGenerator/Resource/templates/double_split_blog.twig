<!-- ####### DOUBLE BLOG ####### -->
{% set data_left = data[0] %}
{% set data_right = data[1] %}
{% set title_align = 'left' %}

<!-- ####### SPLIT BLOG ####### -->
<table class="split_blog" align="center" width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0" style="cursor: default; border-spacing: 4px; border-bottom: solid; border-bottom-color: #cccac0; border-bottom-width: 4px; border-right: solid; border-right-color: #cccac0; border-right-width: 4px;">
    {% set data = data_left %}
    <tr>
        <td class="image" valign="middle" width="50%" style="color: #7c7c7c; font-family: Arial, Helvetica, sans-serif, Latha, Inaimathi; cursor: default; padding: 45px 0px 40px 30px;">
            {% include 'blog_image.twig' %}
        </td>
        <td class="content" valign="top" style="color: #7c7c7c; font-family: Arial, Helvetica, sans-serif, Latha, Inaimathi; cursor: default; padding: 45px 33px 40px 25px">
            {% include 'blog_title.twig' %} <br />
            {% include 'blog_blurb.twig' %}
        </td>
    </tr>
    <tr>
        <td colspan="2" style="padding: 0px 5px 0px 5px"><hr /></td>
    </tr>
    {% set data = data_right %}
    <tr>
        <td class="content" valign="top" style="color: #7c7c7c; font-family: Arial, Helvetica, sans-serif, Latha, Inaimathi; cursor: default; padding: 40px 25px 40px 33px">
            {% include 'blog_title.twig' %} <br />
            {% include 'blog_blurb.twig' %}
        </td>
        <td class="image" valign="middle" width="50%" style="color: #7c7c7c; font-family: Arial, Helvetica, sans-serif, Latha, Inaimathi; cursor: default; padding: 40px 30px 40px 0px">
            {% include 'blog_image.twig' %}
        </td>
    </tr>
</table>
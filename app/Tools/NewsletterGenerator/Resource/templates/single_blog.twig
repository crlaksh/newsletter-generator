<!-- ####### SINGLE BLOG ####### -->
{% set data = data[0] %}
{% set title_align = 'left' %}
{% if language == 'tamil' %}
    {% set readmore = "மேலும்" %}
{% else %}
    {% set readmore = "More" %}
{% endif %}
<table class="single_blog" width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0" style="color: inherit; font-family: inherit; font-size: inherit; cursor: inherit;">
    <tr>
        <td class="image" valign="top" style="color: inherit; font-family: inherit; font-size: inherit; cursor: inherit;">
            {% include 'blog_image.twig' %}
        </td>
    </tr>
    <tr>
        <td class="content" valign="top" style="color: inherit; font-family: inherit; font-size: inherit; cursor: inherit;">
            <a href="{{data['url']}}{% if ('?' in data['url']) == true  %}&amp;{% else %}?{% endif %}{% include 'utm_param.twig' %}" style="text-decoration: none; color: inherit;" target="_blank" title="{{data['title']}}">
            <img alt="{{readmore}}" title="{{readmore}}" border="10" width="30" src="https://gallery.mailchimp.com/be38b7a8cd19d420bb43fd883/images/8fcf0a48-7fe6-42b2-b629-39ab48ab0d5c.png" style="width:30px;float:right;max-width:30px;display:block;border-color:#c46f17;background-color:#c46f17;outline:none;text-decoration:none;margin: 20px" class="CToWUd"></a>
            {% include 'blog_title.twig' %}
            {% include 'blog_blurb.twig' %}
            {% include 'blog_readmore.twig' %}
        </td>
    </tr>
</table>
<div class="block_shadow" style="height: 4px; background-color: #CCC7B0; margin-left: 4px;"></div>
<!-- ####### SINGLE BLOG ####### -->
{% set data = data[0] %}
{% set title_align = 'left' %}
<table class="single_blog" align="center" width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0" style="color: #7c7c7c; font-family:  Arial, Helvetica, sans-serif, Latha, Inaimathi; cursor: default; border-bottom-spacing: 5px; border-right-spacing: 5px; border-bottom: solid; border-bottom-color: #cccac0; border-bottom-width: 4px; border-right: solid; border-right-color: #cccac0; border-right-width: 4px;">
    <tr>
        <td class="image" valign="middle" style="color: #7c7c7c; font-family:  Arial, Helvetica, sans-serif, Latha, Inaimathi; font-size: 11px; cursor: default;" colspan="2">
            {% include 'blog_image.twig' %}
        </td>
    </tr>
    <tr>
        <td class="content" valign="middle" style="color: #7c7c7c; font-family:  Arial, Helvetica, sans-serif, Latha, Inaimathi; cursor: default; padding: 20px 25px 0px 33px">
            {% set title_color = "#7d3705" %}
            {% set title_font_size = "21px" %}
            {% include 'blog_title.twig' %}
        </td>
        <td class="content" valign="top" style="color: #7c7c7c; font-family:  Arial, Helvetica, sans-serif, Latha, Inaimathi; cursor: default; padding-right: 15px; padding-bottom: 5px; padding-top: 20px">
            <a href="{{data['url']}}{% if ('?' in data['url']) == true  %}&amp;{% else %}?{% endif %}{% include 'utm_param.twig' %}" style="text-decoration: none; color: white; font-weight: bold" target="_blank" title="{{data['title']}}">
            <img alt="&raquo;" title="{{readmore}}... {{data['title']}}" border="10" width="30" height="31" src="https://gallery.mailchimp.com/be38b7a8cd19d420bb43fd883/images/8fcf0a48-7fe6-42b2-b629-39ab48ab0d5c.png" style="width:30px;max-width:30px;display:block;border-color:#c46f17;background-color:#c46f17;outline:none;text-decoration:none; margin-right: 20px" class="CToWUd" /></a>
        </td>
    </tr>
    <tr>
        <td class="content" valign="top" style="color: #7c7c7c; font-family:  Arial, Helvetica, sans-serif, Latha, Inaimathi; cursor: default; padding: 0 20px 20px 33px">
            {% include 'blog_blurb.twig' %}
        </td>
    </tr>
</table>
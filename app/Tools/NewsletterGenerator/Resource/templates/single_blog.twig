<!-- ####### SINGLE BLOG ####### -->
{% set data = data[0] %}
{% set title_align = 'left' %}
{% if language == 'tamil' %}
    {% set readmore = "மேலும்" %}
{% else %}
    {% set readmore = "More" %}
{% endif %}
<table class="single_blog" width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0" style="color: #7c7c7c; font-family:  Arial, Helvetica, sans-serif, Latha, Inaimathi; font-size: 85%; cursor: default;">
    <tr>
        <td class="image" valign="top" style="color: #7c7c7c; font-family:  Arial, Helvetica, sans-serif, Latha, Inaimathi; font-size: 85%; cursor: default;" colspan="2">
            {% include 'blog_image.twig' %}
        </td>
    </tr>
    <tr>
        <td class="content" valign="middle" style="color: #7c7c7c; font-family:  Arial, Helvetica, sans-serif, Latha, Inaimathi; font-size: 85%; cursor: default; padding: 25px">
            {% set title_color = "#7d3705" %}
            {% set title_font_size = "150%" %}
            {% include 'blog_title.twig' %}
        </td>
        <td class="content" valign="middle" style="color: #7c7c7c; font-family:  Arial, Helvetica, sans-serif, Latha, Inaimathi; font-size: 85%; cursor: default;">
            <a href="{{data['url']}}{% if ('?' in data['url']) == true  %}&amp;{% else %}?{% endif %}{% include 'utm_param.twig' %}" style="text-decoration: none; color: white; font-weight: bold" target="_blank" title="{{data['title']}}">
            <img alt=">>" title="{{readmore}}" border="10" width="30" src="https://gallery.mailchimp.com/be38b7a8cd19d420bb43fd883/images/8fcf0a48-7fe6-42b2-b629-39ab48ab0d5c.png" style="width:30px;max-width:30px;display:block;border-color:#c46f17;background-color:#c46f17;outline:none;text-decoration:none; margin-right: 20px" class="CToWUd" /></a>
        </td>
    </tr>
    <tr>
        <td class="content" valign="top" style="color: #7c7c7c; font-family:  Arial, Helvetica, sans-serif, Latha, Inaimathi; font-size: 85%; cursor: default; padding: 0 20px 20px 20px" colspan="2">
            {% include 'blog_blurb.twig' %}
            {% include 'blog_readmore.twig' %}
        </td>
    </tr>
</table>
<div class="block_shadow" style="height: 4px; background-color: #CCC7B0; margin-left: 4px;"></div>
{
    "data_path": "data/",
    "images_path": "images/",
    "newsletter_data_file": "data.xls",
    "original_images_path": "images/original/",
    "newsletter_template": "app/Tools/NewsletterGenerator/Resource/templates/newsletter.twig",
    "newsletter_english_font": "app/Tools/NewsletterGenerator/Resource/fonts/arial.ttf",
    "newsletter_tamil_font": "app/Tools/NewsletterGenerator/Resource/fonts/Latha.ttf",
    "newsletter_data_template": "app/Tools/NewsletterGenerator/Resource/templates/newsletter_data.twig",
    "blog_data": {
        "title_element": "//*[contains(@class,'entry-title')]",
        "image_element": "//*[contains(@class,'entry-media')]//img",
        "video_element": "//*[contains(@class,'entry-media')]//iframe",
        "youtube_icon": "app/Tools/NewsletterGenerator/Resource/images/youtube.png",
        "blurb_element": "//*[contains(@class,'entry-content')]/p[following-sibling::div]/strong",
        "video_image_link": "http://img.youtube.com/vi/%s/maxresdefault.jpg",
        "video_gdata_link": "http://gdata.youtube.com/feeds/api/videos/%s?v=2&alt=json&prettyprint=true"
    },
    "blogs": ["single_blog", "double_blog", "split_blog", "split_blog_mirror"],
    "blog_image": {
        "youtube_icon": "http://www.ishafoundation.org/mail/app/index.php?/public/file/view/ry/se",
        "volume_icon": "http://www.ishafoundation.org/mail/app/index.php?/public/file/view/ry/sn"
    },
    "blog_readmore": "http://www.ishafoundation.org/mailmarketer/admin/temp/user/2/melum.gif",
    "quote": {
        "quote_image": "http://www.ishafoundation.org/mailmarketer/admin/temp/user/3/quote-white.png",
        "signature": "சத்குரு"
    },
    "single_blog": {
        "no_of_data": 1,
        "type": "blog",
        "defaults": {
            "image": {
                "width": 650,
                "height": 433,
                "resolution": 75
            }
        }
    },
    "double_blog": {
        "type": "blog",
        "defaults": {
            "image": {
                "width": 325,
                "height": 233,
                "resolution": 75
            }
        }
    },
    "split_blog": {
        "type": "blog",
        "defaults": {
            "image": {
                "width": 325,
                "height": 270,
                "resolution": 75
            }
        }
    },
    "split_blog_mirror": {
        "type": "blog",
        "defaults": {
            "image": {
                "width": 325,
                "height": 270,
                "resolution": 75
            }
        }
    }
}
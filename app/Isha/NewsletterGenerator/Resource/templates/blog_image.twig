<table class="blog_image" width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0">
    {% if data['media']['duration'] %}
    <tr>
        <td class="video_title" style="background-color: #1E1E1E; padding: 6px 5px 4px 10px; vertical-align: middle; font-size: 9px;">
            <a href="{{data['url']}}{% include 'utm_param.twig' %}" style="text-decoration: none; color: #DDD;" target="_blank" title="{{data['title']}}">
                {{data['title']}}
            </a>
        </td>
    </tr>
    {% endif %}
    <tr>
        <td class="image">
            <a href="{{data['url']}}{% include 'utm_param.twig' %}" style="text-decoration: none" target="_blank" title="{{data['title']}}">
                <img src="{{data['media']['image']['url']}}" alt="{{data['title']}}" title="{{data['title']}}" border="0" height="100%" width="100%" style="float: left" />
            </a>
        </td>
    </tr>
    {% if data['media']['duration'] %}
    <tr>
        <td class="video_footer" style="background-color: #1E1E1E; padding: 2px 5px 2px 5px; font-size: 10px;height: 18px;vertical-align: middle; color: #7F7F7F;" valign="middle">
            <a href="{{data['url']}}{% include 'utm_param.twig' %}" style="text-decoration: none; color: #999;" target="_blank" title="{{data['title']}}">
            <table width="100%" border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td width="5%" valign="middle">
                        <span style="display: inline-block;float: left; width: 0px; height: 0px;  margin-left: 12px; margin-right: 16px; border-top: 6px solid transparent; border-bottom: 6px solid transparent; border-left: 10px solid #7F7F7F; z-index: 2; transition: all .3s;"></span>
                    </td>
                    <td width="4%" valign="middle">
                        <span style="float: left; width: 3px; border: 4px solid transparent; border-right-color: #7F7F7F; background: transparent;">
                            <span style="float: left; width: 5px; height: 6px;background-color:#7F7F7F;"></span>
                        </span>
                    </td>
                    <td width="1%" style="font-family: Georgia;font-size: 5px; height:20px; font-weight: bold" valign="middle" align="right">
                        )
                    </td>
                    <td width="1%" style="font-family: Georgia;font-size: 12px; height:20px;padding-top: 5px" valign="top" align="left">
                        )
                    </td>
                    {% set duration = data['media']['duration']|split(':') %}
                    <td width="15%" align="right" style="color: #EEE; font-family: Georgia; font-size: 11px;">
                        00:00{% if duration[0] != "00" %}:00{% endif %}
                    </td>
                    <td width="15%" align="left" style="color:#7F7F7F;font-family: Georgia; font-size: 11px;">
                         &nbsp;/&nbsp;{% if duration[0] != "00" %}{{duration[0]}}:{% endif %}{{duration[1]}}:{{duration[2]}}
                    </td>
                    <td align="right">
                        <img src="http://www.ishafoundation.org/mail/app/index.php?/public/file/view/ry/se" alt="YouTube" />
                    </td>
                    <td></td>
                </tr>
            </table>
            </a>
        </td>
    </tr>
    {% endif %}
</table>